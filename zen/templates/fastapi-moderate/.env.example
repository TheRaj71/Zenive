# Application Configuration
PROJECT_NAME={{project_name}}
VERSION=1.0.0
DESCRIPTION="FastAPI application with authentication and database"
DEBUG=true

# Security
SECRET_KEY={{secret_key}}
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# Database
DATABASE_URL=postgresql+asyncpg://user:password@localhost/{{project_name}}_db
DATABASE_ECHO=false

# Redis
REDIS_URL=redis://localhost:6379/0

# CORS
BACKEND_CORS_ORIGINS=["http://localhost:3000","http://localhost:8080","http://localhost:3001"]

# API
API_V1_STR=/api/v1

# Production settings (for docker-compose.prod.yml)
POSTGRES_PASSWORD=your-secure-password
POSTGRES_DB={{project_name}}_db